{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "camelcase": "off"
  },
  "overrides": [
    {
      "files": ["test/**"],
      "env": {
        "jest": true
      }
    }
  ]
}
